{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "allowImportingTsExtensions": true, // <-- FIX: Allows explicit .ts, .tsx imports
    "resolveJsonModule": true,
  },
  "include": ["src"]
}